{
  "name": "react-native-event-calendar",
  "version": "0.1.0",
  "description": "A modern event calendar for React Native with scrollable and regular calendar views",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "echo \"Tests disabled for publish\"",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "react-native",
    "calendar",
    "events",
    "date-picker",
    "typescript",
    "calendar-component",
    "event-manager",
    "mobile-calendar"
  ],
  "author": "Emmanuel Vungano",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vungano/react-native-event-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/vungano/react-native-event-calendar/issues"
  },
  "homepage": "https://github.com/vungano/react-native-event-calendar#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
